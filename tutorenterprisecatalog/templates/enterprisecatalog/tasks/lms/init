    --client-secret {{ ENTERPRISE_CATALOG_OAUTH2_SECRET_SSO }} \
    --scopes user_id \
    --skip-authorization \
    --update \
    enterprise-catalog-sso \
    enterprise-catalog
# For edx-enterprise to use lms as backend
